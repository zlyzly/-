/* pages/tabs/tabs.wxss */
.wrapper {
  background: hsl(240, 6%, 93%);
}
.tabss {
  width: 100%;
  padding: 40rpx 0;
  overflow-x: auto;
}
.tabs-item {
  width: auto;
}
.tabs-item text {
  padding: 10rpx 40rpx;
}
.tabs-item text.active {
  border-bottom: 2px solid #1296db;
}

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.titleSel {
  color: #5f6fee;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.titleUnsel {
  color: #858fab;
  font-size: #858fab;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 100rpx;
  position: relative;
  margin-top: 10rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.swiper {
  width: 100%;
  height: 100%;
  flex: 1;
  height:100vh;
  overflow: scroll;
}

.recordItem {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.flex_box {
  display: flex;
  justify-content: flex-start;
  height: 200rpx;
}
.flex_box .img {
  width: 28%;
  margin-right: 10rpx;
}
.imgs {
  background-color: #eeeeee;
  width: 200rpx;
  height: 200rpx;
}
.text {
  position: relative;
  width: 75%;
}
.titles {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  font-weight: 550;
  margin: 0;
}
.des {
  font-size: 30rpx;
  display: block;
}
.num {
  display: block;
  color: crimson;
  font-size: 30rpx;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}