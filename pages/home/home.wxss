.weui-cell {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.weui-cell .loction {
  width: 15%;
}
.weui-cell .weui-input {
  border: 1px solid #eee;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  width: 80%;
  font-size: 30rpx;
}
.weui-cell .icon-box {
  width: 33%;
  margin: 20rpx;
  display: flex;
  align-items: center;
}
.section__img {
  width: 100%;
}
.section__img .image {
  border-radius: 20rpx;
  width: 100%;
}
.weui-cell .icon-box .icon-box-desc {
  font-size: 26rpx;
  color: #262626;
  margin-left: 5rpx;
}
.section__icon, .section__img_box {
  width: 100%;
  padding: 10rpx 0;
}
.section__icon .icon-box {
  width: 25%;
  display: inline-block;
  text-align: center;
}
.section__icon .icon-box .icon-box-text {
  font-size: 30rpx;
}
.img_box {
  width: 48.5%;
  display: inline-block;
  position: relative;
}
.img_box:nth-child(1),.img_box:nth-child(3) {
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.img_box .image {
  width: 100%;
  height: 160rpx;
  border-radius: 20rpx;
}
.img_box .des_box {
  position: absolute;
  top: 20%;
  left: 8%;
  color: #262626;
}
.des_box .title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}
.des_box .des {
  font-size: 26rpx;
}
.section__img .title_b {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  display: block;
}
.section__img .tui_box {
  width: 33%;
  display: inline-block;
  text-align: center;
}
.section__img .tui_box .image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.section__img .tui_box .text {
  display: block;
  font-size: 26rpx;
  color: #262626;
  margin-top: 10rpx;
}
.table {
  width: 100%;
  padding-top: 30rpx;
}
.table .flex-wrp {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.table .flex-item {
  display: inline-block;
  margin-bottom: 20rpx;
}
.table .demo-text-1 {
  width: 35%;
  height: auto;
  position: relative;
}
.table .demo-text-2 {
  width: 65%;
  padding-left: 20rpx;
  overflow: hidden;/*超出部分隐藏*/
}
.table .demo-text-1 image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
}
.table .demo-text-1 .mini-btn {
  background: #262626;
  font-size: 25rpx;
  color: #eee;
  padding: 8rpx 10rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 5rpx;
  left: 5rpx;
}
.table .demo-text-1 .mark {
  background: rgba(15, 15, 15, 0.5);
  width: 220rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 26rpx;
  color: #eee;
  border-radius: 8rpx;
  text-align: center;
  position: absolute;
  bottom: 10rpx;
  left: 0;
}
.table .demo-text-2 .view {
  margin: 8rpx 0;
}
.table .demo-text-2 .views {
  display: flex;
  align-items: center;
}
.table .demo-text-2 .views .icon-small {
  margin-right: 10rpx;
}
.table .demo-text-2 .title {
  color: #262626;
  font-size: 40rpx;
  white-space: nowrap;/*不换行*/
  text-overflow: ellipsis;/*超出部分文字以...显示*/
  -webkit-text-overflow: ellipsis;
  margin-top: 0;
}
.table .demo-text-2 .text {
  color: rgb(218, 29, 29);
  font-size: 30rpx;
  display: block;
}
.table .demo-text-2 .address {
  color: #5a5a5a;
  font-size: 32rpx;
}
.table .demo-text-2 .tags {
  background: rgb(245, 238, 238);
  font-size: 24rpx;
  color: #5a5a5a;
  padding: 8rpx 20rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.table .demo-text-2 .unit {
  color: rgb(218, 29, 29);
  font-size: 30rpx;
}
.table .demo-text-2 .price {
  color: rgb(218, 29, 29);
  font-size: 40rpx;
  font-weight: 500;
}