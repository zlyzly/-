  /* width: 100rpx; */
  margin: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid #000;
}
/*mask*/
.toast_mask {
  opacity: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
}
/*toast*/
.toast_content_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 20rpx;
  z-index: 999;
}
.toast_content {
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  padding: 20rpx;
  background: #1296db;
  border-radius: 10rpx;
  margin: auto;
}
.toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}