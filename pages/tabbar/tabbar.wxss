/* pages/scroll/scroll.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.navbar {
  flex: none;
  display: flex;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  color: #FFCC00;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.page-body {
  padding: 40rpx;
  box-sizing: border-box;
}

.page-section {
  margin-bottom: 20rpx;
}

.btn-area {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-area button:last-child {
  margin-left: 50rpx;
}

