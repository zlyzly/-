.swiper .dots {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper .dots .dot {
  margin: 0 10rpx;
  width: 28rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
  transition: all .6s;
  font: 600 18rpx/28rpx "microsoft yahei";
  text-align: center;
}

.swiper .dots .dot.active {
  background: #f80;
  color: #fff;
}

